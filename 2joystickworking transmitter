#include <WiFi.h>
#include <esp_now.h>

// Data struct for 2 joysticks
typedef struct {
  int joy1Y; // Vertical joystick (Motor 1)
  int joy2X; // Horizontal joystick (Motor 2)
} DataPacket;

DataPacket data;

// Broadcast MAC
uint8_t broadcastMAC[] = {0xFF,0xFF,0xFF,0xFF,0xFF,0xFF};

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println("Transmitter starting");

  WiFi.mode(WIFI_STA);
  WiFi.setChannel(1);

  if (esp_now_init() != ESP_OK) {
    Serial.println("ESP-NOW init failed");
    return;
  }

  // Add broadcast peer
  esp_now_peer_info_t peerInfo = {};
  memcpy(peerInfo.peer_addr, broadcastMAC, 6);
  peerInfo.channel = 1;
  peerInfo.encrypt = false;

  if (esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("Failed to add broadcast peer");
    return;
  }

  Serial.println("ESP-NOW ready");

  // Joystick pins
  pinMode(2, INPUT); // Joystick 1 Y-axis (vertical)
  pinMode(1, INPUT); // Joystick 2 X-axis (horizontal)
  pinMode(3, INPUT); // Joystick 2 Y-axis (vertical, unused if we only want X)
}

void loop() {
  // Read joysticks
  data.joy1Y = analogRead(2); // Motor 1
  data.joy2X = analogRead(1); // Motor 2 X-axis

  // Send broadcast
  esp_err_t result = esp_now_send(broadcastMAC, (uint8_t*)&data, sizeof(data));

  if (result == ESP_OK) {
    Serial.print("Sent Y1: ");
    Serial.print(data.joy1Y);
    Serial.print(" | X2: ");
    Serial.println(data.joy2X);
  } else {
    Serial.println("Send failed");
  }

  delay(200);
}
